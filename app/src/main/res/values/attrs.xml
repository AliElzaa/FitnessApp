<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ExpandableTextView">
        <attr name="maxCollapsedLines" format="integer" />
        <attr name="animDuration" format="integer" />
        <attr name="animAlphaStart" format="float" />
        <attr name="expandText" format="string" />
        <attr name="collapseText" format="string" />
    </declare-styleable>

    <declare-styleable name="CircularImageView">
        <attr name="border" format="boolean" />
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
        <attr name="shadow" format="boolean" />
        <attr name="shadow_color" format="color" />
        <attr name="shadow_radius" format="dimension" />
    </declare-styleable>
    <declare-styleable name="CreativeViewPager">
        <attr format="dimension" name="headerItemSize"/>
        <attr format="dimension" name="headerItemMargin"/>
        <attr format="dimension" name="contentHorizontalPadding"/>
        <attr format="dimension" name="contentItemMargin"/>
    </declare-styleable>
    <declare-styleable name="CardSlider">
        <!-- Active card offset from start of RecyclerView. Default value is 50dp. -->
        <attr name="activeCardLeftOffset" format="dimension"/>
        <!-- Card width. Default value is 148dp. -->
        <attr name="cardWidth" format="dimension"/>
        <!-- Distance between cards. Default value is 12dp. -->
        <attr name="cardsGap" format="dimension"/>
        <!-- ViewUpdater implementation class. If not set, DefaultViewUpdater class is used. -->
        <attr name="viewUpdater" format="string"/>
    </declare-styleable>
</resources>